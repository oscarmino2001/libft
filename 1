#include "libft.h"
#include <stdio.h>

int	*ft_memchr(const void *s, int c, size_t n)
{
	const unsigned char	*s1;
	size_t				i;
	unsigned char		b;

	i = 0;
	s1 = (const unsigned char *)s;
	b = (unsigned char)c;
	while (i < n)
	{
		if (s1[i] == b)
		//	return ((void *)s + i);
			return (i);
		i++;
	}
	return (NULL);
}
int main()
{
	char str[] = "ch\0aimaa";
	printf("%d",ft_memchr(str,'\0',9));
	return 0;
}
